    ["l07_military"] = 1,
    ["l08_yantar"] = 1,
    ["jupiter"] = 1,
    ["l03u_agr_underground"] = 1,
    ["l10_limansk"] = 1,
    ["l08u_brainlab"] = 1,
    ["l10_red_forest"] = 1,
    ["labx8"] = 1,
