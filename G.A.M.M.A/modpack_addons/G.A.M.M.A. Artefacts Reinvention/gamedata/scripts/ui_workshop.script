GUI = nil -- instance, don't touch
function get_workshop_ui(...)
	if (not GUI) then
		GUI = UIWorkshop()
	end
	
	if (GUI) and (not GUI:IsShown()) then
		GUI:Reset(...)
		GUI:ShowDialog(true)
		Register_UI("UIWorkshop","ui_workshop")
		
		return GUI
	end
end


